<% if user_signed_in? %>
    <%= simple_form_for(@post) do |f| %>
      <% f.error_notification %>
      <div class="field">
        <div class="control">
        <%=f.input :title, label: "Tell about it", autofocus:true, input_html: {class: 'input'},wrapper: false, label_html: {class: "label"}, placeholder: 'Share your secret...'%>
        </div>
    
        <div class="control">
          <%= f.input :posts, label: "Post" , input_html: {class: "textarea"}, wrapper: false,
          label_html: {class:"label"}, placeholder: "Create post here..." %>
        </div>
      </div>
            <%= f.button :submit, class: "button is-primary" %>
      <% end %>
  <% end %>
  
