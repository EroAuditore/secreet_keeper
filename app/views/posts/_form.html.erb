<%= simple_form_for(@post) do |f| %>
  <% f.error_notification %>
  <div class="field">
    <div class="control">
    <%= f.input :title, label: "Title" , input_html: {class: "text"}, wrapper: false,
      label_html: {class:"label"}, placeholder: "Enter title here...", autofocus: true %>
    </div>
      <%= f.input :posts, label: "Post" , input_html: {class: "textarea"}, wrapper: false,
      label_html: {class:"label"}, placeholder: "Create post here...", autofocus: true %>
    </div>
  </div> 
  
  <%= f.button :submit, class: "button is-info" %>
  
  <% end %>
  
