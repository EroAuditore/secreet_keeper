<!DOCTYPE html>
<html>
  <head>
    <title>SecretKeeper</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <nav class="navbar is-primary" role="navigation" aria-label="main navigation">
        <div class="navbar-brand">
            <a class="navbar-item" href="/">
                <h1 class="title is-5">Secreet Keeper</h1>
            </a>
            <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarExample">
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
          </a>
        </div>
        <div class="navbar-menu" id="navbarExample">
          <div class="navbar-end">
            <div class="navbar-item">
              <a class="button is-dark has-text-white is-fullwidth" href="/">New Topic</a>
            </div>
  
            <div class="navbar-item">
              <a class="button is-primary has-text-dark is-fullwidth" href="/members/sign_up">New User</a>
            </div>
            <div class="navbar-item">
              <a class="button is-primary has-text-dark is-fullwidth" href="/members/sign_in">Log In</a>
            </div>
  
          </div>
        </div>
      </nav>
      
    <%= yield %>
  </body>
</html>
